<style>
	.header {
		background: var(--color-bg);
		border-bottom: 1px solid var(--color-border);
		padding: 1rem 1.5rem;
		position: sticky;
		top: 0;
		z-index: 100;
		backdrop-filter: blur(10px);
		background: rgba(255, 255, 255, 0.95);
	}

	.header__container {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.header__brand {
		flex: 1;
	}

	.header__logo {
		font-size: 1.25rem;
		font-weight: 700;
		color: var(--color-text);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.header__logo:hover {
		color: var(--color-accent);
	}

	.header__nav {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.header__github {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		color: var(--color-text);
		transition: color 0.2s ease, transform 0.2s ease;
		border-radius: 0.5rem;
	}

	.header__github:hover {
		color: var(--color-accent);
		transform: scale(1.1);
	}

	.header__github svg {
		width: 24px;
		height: 24px;
	}

	@media (max-width: 768px) {
		.header {
			padding: 0.875rem 1.25rem;
		}

		.header__logo {
			font-size: 1.125rem;
		}

		.header__github {
			width: 40px;
			height: 40px;
		}

		.header__github svg {
			width: 22px;
			height: 22px;
		}
	}

	@media (max-width: 480px) {
		.header__logo {
			font-size: 1rem;
		}
	}
</style>
